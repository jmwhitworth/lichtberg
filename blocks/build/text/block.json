{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "lichtberg/text",
  "ancestor": [
    "lichtberg/section"
  ],
  "version": "0.3.0",
  "title": "Text",
  "category": "lichtberg",
  "icon": "text",
  "description": "Flexible text block for titles, text and shortcode.",
  "example": {},
  "supports": {
    "html": false
  },
  "textdomain": "lichtberg",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "viewScript": "file:./view.js",
  "attributes": {
    "alignment": {
      "type": "string",
      "default": null
    },
    "classBaseName": {
      "type": "string",
      "default": "wp-block-lichtberg-text"
    },
    "content": {
      "type": "string",
      "default": ""
    },
    "style": {
      "type": "array",
      "default": []
    },
    "styleOptions": {
      "type": "array",
      "default": []
    },
    "tag": {
      "type": "string",
      "default": "p"
    },
    "tagOptions": {
      "type": "array",
      "default": [
        {
          "label": "Paragraph",
          "value": "p"
        },
        {
          "label": "Heading 1",
          "value": "h1"
        },
        {
          "label": "Heading 2",
          "value": "h2"
        },
        {
          "label": "Heading 3",
          "value": "h3"
        },
        {
          "label": "Heading 4",
          "value": "h4"
        },
        {
          "label": "Heading 5",
          "value": "h5"
        },
        {
          "label": "Heading 6",
          "value": "h6"
        }
      ]
    }
  }
}